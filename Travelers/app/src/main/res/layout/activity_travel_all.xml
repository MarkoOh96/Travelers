<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TravelAllActivity"
    android:orientation="vertical">

    <include layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"        >

                <ImageView
                    android:id="@+id/image_d"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/username_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="MarkoOh"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"/>


            </LinearLayout>

            <fragment
                android:id="@+id/all_map"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:name="com.google.android.gms.maps.SupportMapFragment">

            </fragment>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From:  "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/from_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skopje"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To:  "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/to_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ohrid"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:  "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/date_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.06.2018"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:  "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/time_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:00"
                    android:textSize="20sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:  "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/price_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 mkd"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Seats:  "
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/freeseats_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Reserve seat"
                android:textSize="25sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>